@model IEnumerable<Storage.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<style>
    body {
        overflow: hidden;
        padding-bottom: 44px;
    }
</style>

<header class="position-sticky bg-body pt-3 d-flex w-100 align-items-center z-1" style="top: 57px; max-width 100vw;">
    <h1 class="text-nowrap">Products (@Model.Count())</h1>
    <div class="d-flex w-100 align-items-center">
        <p class="m-0">
            <a asp-action="Create">Create New</a>
        </p>
        <div class="p-2 ">
            <form asp-action="Filter" class="d-flex px-2">
                <label class="form-label visually-hidden" for="category-filter">Filter:</label>
                <input class="form-control me-2" id="category-filter" type="text" name="category"
                    value="@ViewBag.CurrentFilter" placeholder="Filter by category" />
                <button class="btn btn-secondary btn" type="submit">Apply</button>
            </form>
        </div>
        @if (ViewBag.CurrentFilter != null)
        {
            <p class="m-0">
                <a asp-action="Index">Clear filter</a>
            </p>
        }
    </div>
</header>

<div class="h-100 position-relative w-100 d-flex flex-column overflow-x-auto pe-3">
    <table class="table table-hover position-relative w-100" style="margin-bottom: 60px">
        <thead class="bg-body position-sticky border-bottom left-0 right-0 w-100" style="top: 40px">
            <tr class="w-100 h-100">
                <th class=" text-nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Shelf)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="pb-4 overflow-x-scroll" style="max-width: 100vw">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-truncate" style="max-width: 200px;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td class="text-truncate">
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.Shelf)
                    </td>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td class="text-truncate" style="max-width: 300px;">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>