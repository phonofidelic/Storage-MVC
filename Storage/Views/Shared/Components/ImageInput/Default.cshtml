@model ImageInputViewModel

@if(Model.IsOpen)
{
    <div class="form-group">
        <label asp-for="ImagePath" class="control-label"></label>
        <input asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AltText" class="control-label"></label>
        <input asp-for="AltText" class="form-control" />
        <span asp-validation-for="AltText" class="text-danger"></span>
        <div class="form-group py-3 d-flex align-items-center gap-3">
            <a asp-action="AddProductImage" asp-route-id="Product.Id" class="btn btn-primary">Save Image</a>
            <a class="text-danger" href="">Cancel</a>
        </div>
    </div>
} else
{
    <div class="form-group py-3 d-flex align-items-center gap-3">
        <a asp-action="AddImage">Add image</a>
    </div>
}